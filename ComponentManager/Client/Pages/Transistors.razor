@page "/transistors"
@using ComponentManager.Shared
@using System.Text.Json
@using System.Text
@using Microsoft.AspNetCore.WebUtilities
@inject NavigationManager NavManager
@inject HttpClient Http

<PageTitle>Transistors</PageTitle>

<Part Title="Transistors"
      Paging=TransistorList
      Search=Search
      SearchChanged=OnSearch
      OnPageRequested=RequestPage>
    



    
@if (TransistorList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>U<sub>max</sub></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in TransistorList.Data)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.UMax V</td>
                    <td></td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
}

</Part>



@code {

    private PagingInfo<Transistor>? TransistorList { get; set; }

    private string Search { get; set; } = "";
    private int Page { get; set; } = 0;
    private int Size { get; set; } = 10;

    protected override async Task OnInitializedAsync()
    {
        await GetData();
    }

    protected async Task RequestPage(int page)
    {
        Page = page;
        await GetData();
    }

    private async Task OnSearch(string value)  
    {
        Search = value;
        await GetData();
    }


    private async Task GetData()  
    {
        var queryParams = new Dictionary<string, string>
        {
            ["page"] = Page.ToString(),
            ["size"] = Size.ToString(),
            ["filter"] = Search
        };
        var uri = QueryHelpers.AddQueryString("Transistor", queryParams);
        TransistorList = await Http.GetFromJsonAsync<PagingInfo<Transistor>>(uri);
    }

}

