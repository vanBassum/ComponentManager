@page "/transistors"
@using ComponentManager.Shared
@inject HttpClient Http

<PageTitle>Transistors</PageTitle>

<Part @ref="child"
      Uri="Transistor"
      Title="Transistors"
      Paging=TransistorList
      OnLoad=LoadData>
    

@if (TransistorList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th @onclick='()=>child.Sort("Name")'>Name</th>
                <th @onclick='()=>child.Sort("UMax")'>U<sub>max</sub></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in TransistorList.Data)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.UMax V</td>
                    <td></td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
}

</Part>



@code {
    private Part? child; 
    private PagingInfo<Transistor>? TransistorList { get; set; }


    protected async Task LoadData(string uri)
    {
        TransistorList = await Http.GetFromJsonAsync<PagingInfo<Transistor>>(uri);
    }


}

